{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2017",
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
		"pretty": true,
		"sourceMap": false,
		"outDir": "dist"
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts",
		"index.ts"
	],
	"exclude": [
		"node_modules"
	]
}
